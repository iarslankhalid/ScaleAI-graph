# ========================================
# ScaleAI GraphRAG - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values

# ========================================
# Graph Database Configuration
# ========================================
# Choose graph backend: "networkx" (in-memory) or "neo4j" (database)
GRAPH_BACKEND=networkx

# Neo4j Connection (required if GRAPH_BACKEND=neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ========================================
# LLM Configuration
# ========================================
# Anthropic Claude API Key (required for LLM features)
ANTHROPIC_API_KEY=sk-ant-api03-your-api-key-here

# ========================================
# Pinecone Configuration (Optional)
# ========================================
# Uncomment and configure if using Pinecone for vector search
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=us-west1-gcp
# PINECONE_INDEX=scaleai-graphrag

# ========================================
# ScaleApp API Configuration (Optional)
# ========================================
# Uncomment and configure if integrating with ScaleApp API
# SCALEAPP_API_URL=https://api.scaleapp.com
# SCALEAPP_API_KEY=your_scaleapp_api_key_here

# ========================================
# API Server Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# ========================================
# Data Paths
# ========================================
# Path to Excel data file
EXCEL_PATH=data/AI_sheet.xlsx

# Path to graph cache file
GRAPH_CACHE_PATH=data/graph_cache.pkl
